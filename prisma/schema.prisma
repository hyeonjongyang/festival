generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  BOOTH_MANAGER
  ADMIN
}

enum AccountBatchKind {
  STUDENT
  BOOTH
  ADMIN
}

enum VisitViolationType {
  DUPLICATE_VISIT
}

model User {
  id             String           @id @default(cuid())
  role           UserRole
  grade          Int?
  classNumber    Int?
  studentNumber  Int?
  code           String           @unique
  nickname       String
  nicknameLocked Boolean          @default(false)
  visitCount     Int              @default(0)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  booth          Booth?
  posts          Post[]
  visits         BoothVisit[]     @relation("StudentBoothVisits")
  createdBatches AccountBatch[]   @relation("CreatedBatches")
  visitViolations VisitViolation[] @relation("StudentVisitViolations")
  boothRatings   BoothRating[]
}

model Booth {
  id          String    @id @default(cuid())
  name        String
  ownerId     String    @unique
  location    String?
  description String?
  qrToken     String    @unique @default(uuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  owner       User      @relation(fields: [ownerId], references: [id])
  visits      BoothVisit[]
  posts       Post[]
  visitViolations VisitViolation[]
  ratings     BoothRating[]
}

model BoothVisit {
  id         String   @id @default(cuid())
  boothId    String
  studentId  String
  visitedAt  DateTime @default(now())

  booth      Booth    @relation(fields: [boothId], references: [id])
  student    User     @relation("StudentBoothVisits", fields: [studentId], references: [id])

  @@index([studentId, visitedAt])
  @@index([boothId, visitedAt])
}

model Post {
  id        String   @id @default(cuid())
  authorId  String
  boothId   String?
  body      String
  imagePath String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author    User     @relation(fields: [authorId], references: [id])
  booth     Booth?   @relation(fields: [boothId], references: [id])
}

model AccountBatch {
  id        String            @id @default(cuid())
  createdBy String
  kind      AccountBatchKind
  payload   Json
  xlsxPath  String?
  createdAt DateTime          @default(now())

  creator   User              @relation("CreatedBatches", fields: [createdBy], references: [id])
}

model VisitViolation {
  id            String             @id @default(cuid())
  boothId       String
  studentId     String
  type          VisitViolationType
  detectedAt    DateTime           @default(now())
  lastVisitedAt DateTime
  availableAt   DateTime

  booth         Booth              @relation(fields: [boothId], references: [id])
  student       User               @relation("StudentVisitViolations", fields: [studentId], references: [id])

  @@index([detectedAt])
  @@index([boothId, detectedAt])
  @@index([studentId, detectedAt])
}

model FeatureFlag {
  key       String   @id
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BoothRating {
  id        String   @id @default(cuid())
  boothId   String
  studentId String
  score     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  booth   Booth @relation(fields: [boothId], references: [id])
  student User  @relation(fields: [studentId], references: [id])

  @@unique([boothId, studentId])
}
